<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_category_pic"
        android:layout_width="150dp"
        android:layout_height="103dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سكر"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_category_pic"
        app:layout_constraintEnd_toEndOf="@+id/iv_category_pic"
        app:layout_constraintStart_toStartOf="@+id/iv_category_pic"
        app:layout_constraintTop_toTopOf="@+id/iv_category_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>